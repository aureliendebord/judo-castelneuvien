---
import Menu from "../components/Menu.astro";
import Title from "../components/atoms/Title.astro";
import { menu } from "../content/content.json";
interface Props {
  seo: {
    title: string;
    description: string;
  };
  title: string;
}

const { seo, title } = Astro.props;

const menuItems = Object.values(menu).map(({ text, to }) => ({
  text,
  to,
}));
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={seo.description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{seo.title}</title>
  </head>
  <body
    class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 bg-gradient-to-r from-rose-100 to-teal-100 text-gray-300"
  >
    <main class="flex flex-col justify-center"></main>
    <div class="mx-auto max-w-3xl">
      <Title level={1} text={title} classes="mt-4 text-center text-gray-700" />
      <Menu menuItems={menuItems} />
      <slot />
    </div>
  </body>
</html>
