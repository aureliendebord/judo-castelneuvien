---
import Menu from "../components/Menu.astro";
import Footer from "../components/atoms/Footer.astro";
import Title from "../components/atoms/Title.astro";
import { menu, site } from "../texts/content.json";
interface Props {
  seo: {
    title: string;
    description: string;
  };
  title: string;
}

const { seo, title } = Astro.props;

const menuItems = Object.values(menu).map(({ text, to }) => ({
  text,
  to,
}));
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={seo.description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{seo.title}</title>
  </head>
  <body class="bg-gradient-to-r from-rose-100 to-teal-100">
    <main class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 text-gray-300 mb-16">
      <div class="mx-auto max-w-3xl">
        <Title
          level={1}
          text={site.title}
          classes="my-6 text-center text-gray-700 text-xl"
        />
        <Menu menuItems={menuItems} />
        <slot />
      </div>
    </main>
    <Footer />
  </body>
</html>
